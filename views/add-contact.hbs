{{#> main}}
<h2 class="text-xl">Add Contact</h2>
{{> erroralert}}
<form action="/add" method="post" class="mt-1 max-w-2xl">
    <div class="flex flex-wrap gap-3">
        <div class="w-full md:w-1/3 my-3">
            <label for="nama" class="block text-base text-slate-500">Nama</label>
            <input type="text" name="nama" id="nama" required
                class="w-full px-3 py-2 bg-slate-200 rounded-md shadow-sm mt-2 focus:outline-none focus:ring focus:ring-sky-300 text-slate-500">
        </div>
        <div class="w-full md:w-1/3 my-3">
            <label for="email" class="block text-base text-slate-500">Email</label>
            <input type="email" name="email" id="email" required
                class="w-full px-3 py-2 bg-slate-200 rounded-md shadow-sm mt-2 focus:outline-none focus:ring focus:ring-sky-300 text-slate-500">
        </div>
        <div class="w-full md:w-1/3 my-3">
            <label for="nohp" class="block text-base text-slate-500">No HP</label>
            <input type="text" name="nohp" id="nohp" required
                class="w-full px-3 py-2 bg-slate-200 rounded-md shadow-sm mt-2 focus:outline-none focus:ring focus:ring-sky-300 text-slate-500">
        </div>
    </div>
    <button type="submit"
        class="mt-3 px-3 py-2 bg-sky-200 text-sky-700 opacity-80 rounded-lg shadow hover:opacity-100 focus:border-0 focus:ring focus:ring-sky-100 focus:outline-none">Tambah
        Kontak</button>
    <a href="/"
        class="ml-3 bg-sky-400 px-3 py-2 rounded-lg shadow-lg text-white text-base font-semibold hover:opacity-80 focus:border-0 focus:ring focus:ring-sky-200 max-w-fit focus:outline-none">&laquo;
        Kembali</a>
</form>
{{/main}}